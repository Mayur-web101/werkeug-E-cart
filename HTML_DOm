from werkzeug.wrappers import Request,Response

@Request.application
def application(request):
		result=["<title>HTML DOM</title>"]
		result.append('''
						<html>
							<head>
								<script type="text/javascript">
									function documentName()
									{
										var input_text=document.form1.input1.value;
										alert(input_text)

									}
									function DocumentId()
									{
										var input_text2=document.getElementById("input1").value;
										alert(input_text2 * input_text2 * input_text2)

									}
									function DocumentByName()
									{

										var allgenders=document.getElementsByName("gender");
										alert("Totale Gender:"+allgenders.length);
									}
									function DocumentTage()
									{
										var input_text4=document.getElementsByTagName("p");
										alert("Totale Tage"+input_text4.length);
									}
								</script>
							<head>
							<body>
								<form name="form1" action="" method="POST">
									<p>Document.form.name.value<input name="input1" type="text">
									<input type="button" value="Click" onclick="documentName()">

									<p>Document.getElementId<input id="input1" type="Number">
									<input type="button" value="Click" onclick="DocumentId()">

									<p>Document.getElementByName()male:<input name="gender" type="radio" value="male">
									female:<input name="gender" type="radio" value="female">
									<input type="button" value="Gender" onclick="DocumentByName()">

									<p>DocumentByTagName:<input type="button" value="Click" onclick="DocumentTage()">
								</form>
							</body>
						</html>	
							 ''')
		return Response(''.join(result),mimetype="text/html")
if __name__ == '__main__':
	from werkzeug.serving import run_simple
	run_simple('localhost',4000,application)

