<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="employee_wizard_form" model="ir.ui.view">
        <field name="name">emp_wizard</field>
        <field name="model">employee.wizard</field>
        <field name="arch" type="xml">
            <form>
            	<group>
            		<field name="company_id"/>
            	</group>
            	<footer>
            		<button name="add_compnay" string="Add compnay" type="object" class="btn btn-primary"/>
            	</footer>
            </form>
        </field>
    </record>

    <record id="employee_wizard_action" model="ir.actions.act_window">
	    <field name="name">Add compnay</field>
	    <field name="type">ir.actions.act_window</field>
	    <field name="res_model">employee.wizard</field>
	    <field name="view_mode">form</field>
        <field name="view_id" ref="employee_wizard_form"/>
	    <field name="binding_model_id" ref="model_employee_list"/>
	    <field name="target">new</field>
	</record>

</odoo>